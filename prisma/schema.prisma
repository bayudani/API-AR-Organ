generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model OrganSystem {
  id          Int      @id @default(autoincrement())
  name        String   @unique // Contoh: "Sistem Pencernaan"
  description String   @db.LongText // Penjelasan umum sistem
  process     String   @db.Text // Penjelasan proses urutan
  imageUrl    String?  // Foto ilustrasi sistem (URL)
  
  // Relasi: Satu sistem punya banyak organ
  organs      Organ[] 

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Organ {
  id          Int      @id @default(autoincrement())
  name        String   @unique 
  description String   @db.LongText 
  funFact     String?  @db.VarChar(500)
  
  imageUrl    String?  // URL foto organ
  model3D_Url String?

  // Foreign Key ke Sistem Organ
  systemId    Int?     // Bisa null dulu kalo belum dimasukin ke sistem
  system      OrganSystem? @relation(fields: [systemId], references: [id])

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}